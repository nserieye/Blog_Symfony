{% extends 'base.html.twig' %}
{% block content %}
    <div class="text-center">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}</div>
    <div class="card mx-auto border-secondary j" style="width: 18rem">
        <div class="card-body">
            <form action="{{ path('app_login_check') }}" method="post">
                <div class="form-group">
                    <label for="username">{{ 'blog.login.login'|trans }} :</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="{{ 'blog.login.login'|trans }}" />
                </div>
                <div class="form-group">
                    <label for="password">{{ 'blog.login.password'|trans }} :</label>
                    <input class="form-control" type="password" id="password" name="_password" placeholder="{{ 'blog.login.password'|trans }}" />
                </div>
                <div class="form-group text-center">
                    <input type="hidden" name="{{ path('list_article')}}" value="/account" />
                    <button class="btn btn-secondary" type="submit">{{ 'blog.login.button'|trans }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}