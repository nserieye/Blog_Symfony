{% extends 'base.html.twig' %}
{% block content %}
    <div class="text-center">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}</div>
    <div class="card mx-auto border-secondary j" style="width: 18rem">
        <div class="card-body">
            <form action="{{ path('app_login_check') }}" method="post">
                <div class="form-group">
                    <label for="username">{{ 'blog.login.login'|trans }} :</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="{{ 'blog.login.login'|trans }}" />
                </div>

                <div class="form-group">
                    <label for="password">{{ 'blog.login.password'|trans }} :</label>
                    <input class="form-control" type="password" id="password" name="_password" placeholder="{{ 'blog.login.password'|trans }}" />
                </div>

                <div class="form-group text-center">
                    <input type="hidden" name="{{ path('list_article')}}" value="/account" />
                    <button class="btn btn-secondary" type="submit">{{ 'blog.login.button'|trans }}</button>
                </div>

                <div style="text-align:center;">
                    <a href="#" class="text-secondary" data-toggle="modal" data-target="#modal" style="font-size: smaller">
                        {{ 'blog.login.modal.name'|trans }}
                    </a>
                </div>
                <div class="modal fade" id="modal" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="ModalLabel">{{ 'blog.login.modal.title'|trans }}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>mary = admin</p>
                                <p>john = user </p>
                                <p>{{ 'blog.login.modal.content'|trans }} = doe</p>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}